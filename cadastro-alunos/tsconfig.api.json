{
  "extends": "./tsconfig.json", // Herda configurações base como paths
  "compilerOptions": {
    "target": "ES2022", // Alvo moderno para Node.js
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node", // Resolução de módulo para backend
    "outDir": ".vercel/output/functions", // Vercel espera o output aqui
    "rootDir": "api", // A raiz do nosso código de API
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false // <-- A CORREÇÃO MAIS IMPORTANTE
  },
  "include": ["api/**/*.ts"], // <-- A SEGUNDA CORREÇÃO IMPORTANTE
  "exclude": ["node_modules"]
}